<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".CriarConta">

    <TextView
        android:id="@+id/tvTeethKids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "iTooth"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        />


    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:layout_below="@id/tvTeethKids"
        android:layout_alignStart="@id/etNome"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        >

    </TextView>

    <EditText
        android:id="@+id/etNome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNome"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName">

    </EditText>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:layout_below="@+id/etNome"
        android:layout_alignStart="@+id/etNome"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail"
        android:inputType="textEmailAddress">

    </EditText>

    <TextView
        android:id="@+id/tvTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:layout_below="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTelefone"
        android:layout_alignStart="@+id/tvTelefone"
        android:inputType="phone">

    </EditText>

    <Button
        android:id="@+id/btnAvancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar!"
        android:layout_below="@+id/etTelefone"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:layout_alignEnd="@id/etTelefone"
        android:backgroundTint="@color/greenbl">


    </Button>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="20sp"
        android:layout_below="@id/etTelefone"
        android:layout_marginTop="100dp"
        android:layout_alignStart="@id/etTelefone"
        android:backgroundTint="@color/greenbl">


    </Button>


</RelativeLayout>