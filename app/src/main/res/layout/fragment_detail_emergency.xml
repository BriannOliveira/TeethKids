<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".menu.MenuActivity">

    <TextView
        android:id="@+id/tvTituloEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmergÃªncia"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/darkred"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nexa_heavy"/>


    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:src="@drawable/avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/tvTituloEmergencia"
        />

    <TextView
        android:id="@+id/tvEmergencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivFoto"
        android:text="Nome"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:justificationMode="inter_word"
        android:fontFamily="@font/nexa_heavy"/>

    <TextView
        android:id="@+id/tvEmergencyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmergencyName"
        android:text="Telefone"
        android:textSize="20sp"
        android:textColor="@color/grayblack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
         />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAceitar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Aceitar"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/whitetheme"
        android:layout_below="@id/tvEmergencyPhone"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:fontFamily="@font/nexa_heavy"
        android:paddingStart="20dp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnFechar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@id/btnAceitar"
        android:layout_below="@id/btnAceitar"
        android:layout_marginTop="20dp"
        android:text="Fechar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:backgroundTint="@color/darkred"
        android:paddingStart="20dp"
        android:fontFamily="@font/nexa_heavy"/>

</RelativeLayout>