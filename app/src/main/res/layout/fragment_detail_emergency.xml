<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".menu.MenuActivity">

    <TextView
        android:id="@+id/tvTituloEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmergÃªncia"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/darkred"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/imgFechar"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_close_24"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="25dp"
        android:clickable="true"
        />


    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvTituloEmergencia"
        />

    <TextView
        android:id="@+id/tvEmergencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivFoto"
        android:text="Nome"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:textAlignment="center"
        android:justificationMode="inter_word"/>

    <TextView
        android:id="@+id/tvEmergencyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmergencyName"
        android:text="Telefone"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />




    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceitar"
        android:textStyle="bold"
        android:textColor="@color/lightgreen"
        android:textSize="20sp"
        android:backgroundTint="@color/whitetheme"
        android:layout_below="@id/tvEmergencyPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>