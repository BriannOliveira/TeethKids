<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment3">

    <TextView
        android:id="@+id/tv_iTooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTooth"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/greenbl"/>

    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/avatar"
        android:layout_below="@+id/tv_iTooth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:clickable="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/add"
        android:layout_marginStart="235dp"
        android:layout_marginTop="320dp"
        android:background="@color/white"
        android:clickable="true"

        />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUsuario"
        android:layout_alignStart="@+id/etSenha"
        android:layout_marginTop="40dp"
        android:hint="Digite seu nome..."
        />



    <EditText
        android:id="@+id/etSenha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etNome"
        android:hint="Digite sua senha..."
        android:layout_marginTop="25dp"
        />



    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSenha"
        android:layout_alignStart="@+id/etNome"
        android:hint="Digite seu e-mail..."
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/btnAvancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AvanÃ§ar"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/btnVoltar"
        android:textSize="20sp"
        android:layout_marginStart="80dp"
        android:backgroundTint="@color/greenbl"
        >

    </Button>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="20sp"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/greenbl"
        >

    </Button>



</RelativeLayout>