<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/itooth_logo"
        android:layout_below="@+id/tv_iTooth"
        android:layout_centerHorizontal="true"/>



    <TextView
        android:id="@+id/tv_iTooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTooth"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/greenbl"/>


    <TextView
        android:id="@+id/tvTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:layout_below="@+id/imgLogo"
        android:layout_alignStart="@+id/etTelefone"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textColor="@color/greenbl">

    </TextView>

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTelefone"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:hint="Digite seu telefone..."
        android:layout_marginTop="25dp"
        >

    </EditText>

   <Button
        android:id="@+id/btnAvancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_below="@+id/etTelefone"
        android:layout_marginTop="150dp"
        android:textSize="25sp"
        android:layout_alignEnd="@id/etTelefone"
        android:backgroundTint="@color/greenbl">
   </Button>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="25sp"
        android:layout_below="@id/etTelefone"
        android:layout_marginTop="150dp"
        android:layout_alignStart="@id/etTelefone"
        android:backgroundTint="@color/greenbl">
    </Button>


</RelativeLayout>