<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment2">

    <TextView
        android:id="@+id/tv_iTooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTooth"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="@color/greenbl"/>

    <TextView
        android:id="@+id/tvCurriculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currículo:"
        android:layout_below="@+id/tv_iTooth"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/etCurriculo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/greenbl">

    </TextView>


    <EditText
        android:id="@+id/etCurriculo"
        android:layout_width="246dp"
        android:layout_height="326dp"
        android:layout_below="@+id/tvCurriculo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Digite aqui seu currículo..."
        android:inputType="textMultiLine"
        android:minLines="5">

    </EditText>

    <Button
        android:id="@+id/btnAvancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avançar"
        android:layout_below="@+id/etCurriculo"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/btnVoltar"
        android:layout_marginStart="80dp"
        android:textSize="20sp"
        android:backgroundTint="@color/greenbl">

    </Button>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_below="@+id/etCurriculo"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:backgroundTint="@color/greenbl">

    </Button>

</RelativeLayout>