<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signUp.PhotoTakenFragment">

    <ImageButton
        android:id="@+id/ibtnClose"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_close_24"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ivPhotoTaken"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar"
        android:layout_above="@id/btnConfirmPhoto"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnConfirmPhoto"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Confirmar"
        app:cornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/greenbl"
        android:backgroundTint="@color/whitetheme"
        android:fontFamily="@font/nexa_heavy"
        android:textAlignment="center"/>


</RelativeLayout>