<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp.SignUpFragment">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTooth"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alphakind"
        android:textSize="25sp"
        android:textColor="@color/greenbl"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar3"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imgUsuario"
        android:layout_alignRight="@+id/imgUsuario"
        android:background="@color/white"
        android:clickable="true"
        android:src="@drawable/add"

        />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgUsuario"
        android:layout_alignStart="@+id/etSenha"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:hint="Digite seu nome"
        android:background="@drawable/rounded_edittext"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etNome"
        android:layout_alignStart="@+id/etNome"
        android:textSize="15sp"
        android:hint="Digite seu e-mail"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        />

    <EditText
        android:id="@+id/etSenha"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etEmail"
        android:textSize="15sp"
        android:hint="Digite sua senha"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"

        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAvancar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AvanÃ§ar"
        android:layout_below="@+id/etSenha"
        android:layout_marginTop="80dp"
        android:textSize="18sp"
        android:layout_alignEnd="@id/etSenha"
        android:backgroundTint="@color/whitetheme"
        android:textColor="@color/greenbl"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:textAlignment="center"
        android:fontFamily="@font/nexa_heavy"
        >
    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textSize="18sp"
        android:layout_below="@id/btnAvancar"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/etSenha"
        android:backgroundTint="@color/whitetheme"
        android:textColor="@color/darkred"
        android:textStyle="bold"
        android:layout_marginEnd="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/nexa_heavy">
    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

</RelativeLayout>
