<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp.SignUpFragment2">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTooth"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alphakind"
        android:textSize="25sp"
        android:textColor="@color/greenbl"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/itooth_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvTitulo"
        />


    <TextView
        android:id="@+id/tvContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contato:"
        android:layout_below="@+id/imgLogo"
        android:layout_alignStart="@+id/etTelefone"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/greenbl"
        android:fontFamily="@font/nexa_heavy"
        />

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvContato"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:hint="Digite seu telefone"
        android:textSize="15sp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        >

    </EditText>

    <TextView
        android:id="@+id/tvEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereços:"
        android:layout_below="@+id/etTelefone"
        android:layout_alignStart="@+id/etTelefone"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/greenbl"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nexa_heavy"
        />

    <EditText
        android:id="@+id/etEndereco1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvEndereco"
        android:layout_alignStart="@id/etTelefone"
        android:inputType="textPostalAddress"
        android:textSize="15sp"
        android:hint="Digite o primeiro endereço de atendimento"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etEndereco2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/etEndereco1"
        android:layout_alignStart="@id/etTelefone"
        android:inputType="textPostalAddress"
        android:textSize="15sp"
        android:hint="Digite o segundo endereço de atendimento"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        />

    <EditText
        android:id="@+id/etEndereco3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/etEndereco2"
        android:layout_alignStart="@id/etTelefone"
        android:inputType="textPostalAddress"
        android:textSize="15sp"
        android:hint="Digite o terceiro endereço de atendimento"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAvancar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avançar"
        android:layout_below="@+id/etEndereco3"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:layout_alignEnd="@id/etEndereco3"
        android:backgroundTint="@color/whitetheme"
        android:textColor="@color/greenbl"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:textAlignment="center"
        android:fontFamily="@font/nexa_heavy"
        >
    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="18sp"
        android:layout_below="@id/btnAvancar"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/etEndereco3"
        android:backgroundTint="@color/whitetheme"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginEnd="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/nexa_heavy">
    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

</RelativeLayout>