<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_reputation_cvAvaliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="7dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_reputation_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"/>

            <TextView
                android:id="@+id/item_reputation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/item_reputation_name"
                android:layout_marginEnd="20dp"
                android:text="20/04"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_reputation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="0dp"
                android:text="Briann Oliveira Gomes"
                android:textColor="@color/greenbl"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/item_reputation_photo"
                />


            <RatingBar
                android:id="@+id/item_reputation_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:rating="5"
                android:progressTint="@color/greenbl"
                android:layout_below="@id/item_reputation_photo"/>



            <TextView
                android:id="@+id/item_reputation_valueRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_reputation_time"
                android:text="5.0"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/greenbl"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>